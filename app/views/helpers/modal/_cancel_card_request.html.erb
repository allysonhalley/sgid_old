<div class="modal fade" id='<%="modal-destroy-#{request_cancel.id}"%>' role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">                
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">
                <%= StrHelper.system_i18n(:sure_cancel, [:helpers, :submit])%>
                </h4>
            </div>                
            <div class="modal-body">
                <div class="box box-danger">
                    <div class="form-horizontal">
                        <div class="box-body">
                            <div class="form-group">
                                <%= label_tag( :military_registration, StrHelper.attribute_i18n_upper(:military_registration, [:card_request]), class: 'col-sm-5 control-label') %>
                                <div class="col-sm-6">
                                    <%= text_field_tag( :military_registration, request_cancel.military_registration, class: "form-control", readonly: true) %>
                                </div>
                            </div>
                            <div class="form-group">
                            <%= label_tag( :document_reference, StrHelper.attribute_i18n_upper(:document_reference, [:card_request]), class: 'col-sm-5 control-label') %>
                                <div class="col-sm-6">
                                    <%= text_field_tag( :document_reference, request_cancel.document_reference, class: "form-control", readonly: true) %>
                                </div>
                            </div>
                        </div>
                    </div>                    
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default btn-xs pull-left" data-dismiss="modal">
                    <%= StrHelper.system_i18n(:back, [:helpers, :layouts])%>
                </button>
                <%= link_to( StrHelper.system_i18n(:confirm, [:helpers, :submit]), cancel_card_request_path(request_cancel.id), class: 'btn btn-danger btn-xs')%>
            </div>
        </div>
    </div>
</div>
