<div class="modal fade" id='<%="modal-return-#{return_card.id}"%>' role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <%= form_for(@card = Card.find(return_card.id), url: returning_card_path, method: :patch) do |form| %>
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title">
                        <%= StrHelper.system_i18n(:return_card, [:helpers, :layouts])%>
                    </h4>
                </div>
                <div class="modal-body">
                    <div class="box box-success">
                        <div class="form-horizontal">
                            <div class="box-body">
                                <div class="form-group">
                                    <%= form.label( :name, StrHelper.attribute_i18n_upper(:name, [:card]), class: 'col-sm-5 control-label') %>
                                    <div class="col-sm-6">
                                        <%= form.text_field :name, id: :card_name, value: return_card.name, class: "form-control", readonly: true %>                                        
                                    </div>
                                </div>
                                <div class="form-group">
                                    <%= form.label( :registration, StrHelper.attribute_i18n_upper(:registration, [:card]), class: 'col-sm-5 control-label') %>
                                    <div class="col-sm-6">
                                        <%= form.text_field(:registration, id: :card_registration, value: return_card.registration, data:{ inputmask:'"mask": "999999-9"', mask:""}, class: "form-control", readonly: true) %>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <%= form.label( :document_reference, StrHelper.attribute_i18n_upper(:document_reference, [:card_request]), class: 'col-sm-5 control-label') %>
                                    <div class="col-sm-6">
                                        <%= form.text_field( :document_reference, id: :card_document_reference,  value: return_card.document_reference_request, data:{ inputmask:'"mask": "BGE-999/9999"', mask:""}, class: "form-control", readonly: true )%>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <%= form.label( :card_number, StrHelper.attribute_i18n_upper(:card_number, [:card]), class: 'col-sm-5 control-label') %>
                                    <div class="col-sm-6">
                                        <%= form.text_field( :card_number, id: :card_card_number, vallue: return_card.card_number, data:{ inputmask:'"mask": "9999999"', mask:""}, class: "form-control", readonly: true )%>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default btn-xs pull-left" data-dismiss="modal">
                        <%= StrHelper.system_i18n(:back, [:helpers, :layouts]) %>
                    </button>
                    <%= form.submit( StrHelper.system_i18n(:return, [:helpers, :submit]), class: "btn btn-danger btn-xs" )%>
                </div>
            <% end %>
        </div>
    </div>
</div>