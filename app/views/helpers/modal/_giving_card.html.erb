<div class="modal fade" id='<%="modal-giving-#{giving_card.id}"%>' role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">
                    <%= StrHelper.system_i18n(:giving_card, [:helpers, :layouts])%>
                </h4>
            </div>
            <div class="modal-body">
                <div class="box box-success">
                    <div class="form-horizontal">
                        <div class="box-body">
                            <div class="form-group">
                                <%= label_tag( :name, StrHelper.attribute_i18n_upper(:name, [:card]), class: 'col-sm-5 control-label') %>
                                <div class="col-sm-6">
                                    <%= text_field_tag(:name, giving_card.name, {class: "form-control", readonly: true})%>
                                </div>
                            </div>
                            <div class="form-group">
                                <%= label_tag( :registration, StrHelper.attribute_i18n_upper(:registration, [:card]), class: 'col-sm-5 control-label') %>
                                <div class="col-sm-6">
                                    <%= text_field_tag(:registration, giving_card.registration, data:{ inputmask:'"mask": "999999-9"', mask:""}, class: "form-control", readonly: true) %>
                                </div>
                            </div>
                            <div class="form-group">
                                <%= label_tag( :document_reference, StrHelper.attribute_i18n_upper(:document_reference, [:card_request]), class: 'col-sm-5 control-label') %>
                                <div class="col-sm-6">
                                    <%= text_field_tag( :document_reference, giving_card.document_reference_request, data:{ inputmask:'"mask": "BGE-999/9999"', mask:""}, class: "form-control", readonly: true )%>
                                </div>
                            </div>
                            <div class="form-group">
                                <%= label_tag( :card_number, StrHelper.attribute_i18n_upper(:card_number, [:card]), class: 'col-sm-5 control-label') %>
                                <div class="col-sm-6">
                                    <%= text_field_tag( card_number, data:{ inputmask:'"mask": "9999999"', mask:""}, class: "form-control")%>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default btn-xs pull-left" data-dismiss="modal">
                    <%= StrHelper.system_i18n(:back, [:helpers, :layouts]) %>
                </button>
                <%= link_to( StrHelper.system_i18n(:giving, [:helpers, :submit]), giving_card_path(giving_card.id, card_number), class: 'btn btn-success btn-xs')%>
            </div>
        </div>
    </div>
</div>