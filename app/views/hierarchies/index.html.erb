<h3>
  <%= StrHelper.model_i18n(:other, [:hierarchy])%>
</h3>
<p id="notice">
  <%= notice %>
</p>
<div class="box">
  <div class="box-body">
    <%= search_form_for @q, html: {class: "form-horizontal", role: "search"} do |f| %>
      <%= f.search_field :name_or_acronym_cont, class: "form-control", placeholder:  StrHelper.system_i18n(:search, [:helpers, :layouts]) %>
    <% end %>
    <table class="table table-responsive table-hover">
      <thead>
        <tr>
          <th>
            <%= StrHelper.attribute_i18n_upper(:name, [:hierarchy]) %>
          </th>
          <th class="col-sm-3 text-center">
            <%= StrHelper.attribute_i18n_upper(:acronym, [:hierarchy])%>
          </th>
          <th class="col-sm-2 text-center">
            <%= StrHelper.system_i18n_upper(:action, [:helpers, :layouts]) %>
          </th>
        </tr>
      </thead>
      <tbody>
        <% @hierarchies.each do |hierarchy| %>
          <tr>
            <td>
              <%= hierarchy.name %>
            </td>
            <td align="center">
              <%= hierarchy.acronym %>
            </td>
            <td align="center">
              <%= hidden_field(@hierarchy, hierarchy) %>
              <%= link_to( "", edit_hierarchy_path(hierarchy.id), class: 'btn btn-info btn-xs fa fa-edit', title: StrHelper.system_i18n(:edit, [:helpers, :layouts]), 'data-toggle' => 'tooltip', 'data-placement' => 'left')%>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>