<h3><%= StrHelper.system_i18n(:show, [:helpers, :layouts]) %> <%= StrHelper.model_i18n(:one, [:discard])%></h3>
<p id="notice"><%= notice %></p>
<div class="box box-info">  
  <div class="form-horizontal">
    <div class="box-body">
      <div class="form-group">
        <%= label_tag( :card_number, StrHelper.attribute_i18n_upper(:card_number, [:card]), class: 'col-sm-2 control-label') %>
        <div class="col-sm-6">
          <%= text_field_tag(:card_number, @discard.card_number, {class: "form-control", disabled: true})%>
        </div>
      </div>
      <div class="form-group">
        <%= label_tag( :document_request_reference, StrHelper.attribute_i18n_upper(:document_reference, [:card_request]), class: 'col-sm-2 control-label') %>
        <div class="col-sm-6">
          <%= text_field_tag( :document_request_reference, @discard.document_request_reference, {class: "form-control", disabled: true}) %>
        </div>
      </div>
      <div class="form-group">
        <%= label_tag( :reason_discard, StrHelper.attribute_i18n_upper(:reason_discard, [:discard]), class: 'col-sm-2 control-label') %>
        <div class="col-sm-6">
          <%= text_area_tag( :reason_discard, @discard.reason_discard, {class: "form-control", disabled: true}) %>
        </div>
      </div>
      <div class="actions">        
        <%= link_to(StrHelper.system_i18n(:back, [:helpers, :layouts]), hierarchies_path, class:"btn btn-default btn-sm") %>
        <div class="box-tools pull-right">
            <%= link_to(StrHelper.system_i18n(:edit, [:helpers, :layouts]), edit_discard_path(@discard), class:"btn btn-info btn-sm") %>
        </div>                
      </div>
    </div>
  </div>
</div>