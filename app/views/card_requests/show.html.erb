<h3><%= StrHelper.system_i18n(:show, [:helpers, :layouts]) %> <%= StrHelper.model_i18n(:one, [:card_request])%></h3>
<div class="box box-info">  
  <div class="form-horizontal">
    <div class="box-body">
      <div class="form-group">
        <%= label_tag( :military_registration, StrHelper.attribute_i18n_upper(:military_registration, [:card_request]), class: 'col-sm-3 control-label') %>
        <div class="col-sm-6">
          <%= text_field_tag(:military_registration, @card_request.military_registration, {class: "form-control", disabled: true})%>
        </div>
      </div>
      <div class="form-group">
        <%= label_tag( :document_reference, StrHelper.attribute_i18n_upper(:document_reference, [:card_request]), class: 'col-sm-3 control-label') %>
        <div class="col-sm-6">
          <%= text_field_tag( :document_reference, @card_request.document_reference, {class: "form-control", disabled: true}) %>
        </div>
      </div>
      <div class="form-group">
        <%= label_tag( :reason_request, StrHelper.attribute_i18n_upper(:reason_request, [:card_request]),class: 'col-sm-3 control-label') %>
        <div class="col-sm-6">
          <%= text_field_tag(:reason_request, @card_request.i18n_reason_request, {class: "form-control", disabled: true})%>
        </div>
      </div>
      <div class="actions">        
        <%= link_to(StrHelper.system_i18n(:back, [:helpers, :layouts]), card_requests_path, class:"btn btn-default btn-sm") %>
        <div class="box-tools pull-right">
            <%= link_to(StrHelper.system_i18n(:edit, [:helpers, :layouts]), edit_card_request_path(@card_request), class:"btn btn-info btn-sm") %>
        </div>                
      </div>
    </div>
  </div>
</div>